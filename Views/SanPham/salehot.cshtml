<div class="allproductsale">
    <div class="row">
        <div class="col-md-3">
            <!---->
            <div class="imagedoc">
                <img src="~/Content/images/nen2.jpg" class="img-fluid" />
                 <img src="~/Content/uploads/94322.png" class="img-fluid" />
                <p>Gọi ngay <strong style="color:red;">0123.456.789</strong> để được tư vấn về sách.</p>
            </div>

            
            <!----> 
        </div>
        <div class="col-md-9" style="padding:10px 30px;margin:0 auto;">
            <!---->
            <div class="allmausale" style="margin-top:10px;">
                <div class="salef active">

                    <div class="row" style="margin-top:6px;">
                        @foreach (var item in ViewBag.getSPSALE)
                        {

                            <div class="col-lg-2_4 col-md-3 col-6 post2">



                                <!--Xây dựng hàm if với điều kiện lấy thông tin từ người dùng -->
                                @*@if (User.Identity.IsAuthenticated)
                            {*@
                                <!--trong hàm if chứa mã nguồn sản phẩm -->
                                <!--khi đăng nhập thành công so với thông tin người dùng nếu đúng sẽ hiện ra sản phẩm -->




                                <a asp-controller="SanPham" asp-action="Details" asp-route-id="@item.Masp">

                                    <div class="product">
                                        <div class="product__img">
                                            <img src="@item.Hinh" alt="">
                                        </div>
                                        @if (item.Giamgia == 0 || item.Giamgia == null)
                                        {
                                            <div class="product__sale">
                                                <h6 style="color:#fff;">Mới</h6>
                                            </div>

                                        }
                                        else
                                        {
                                            <div class="product__sale">
                                                <h6 style="color:#fff;">@item.Giamgia %</h6>
                                            </div>
                                        }
                                        <div class="product__content">
                                            <div class="product__title">
                                                @item.Tensp
                                            </div>

                                            @if (!(item.Giamgia == 0 || item.Giamgia == null))
                                            {
                                                <div class="product__pride-oldPride">
                                                    <span class="Price">
                                                        <bdi>
                                                            @string.Format("{0:N0}", item.Giaban)
                                                            <span class="currencySymbol">₫</span>
                                                        </bdi>
                                                    </span>
                                                </div>
                                            }

                                        </div>
                                    </div>

                                    <div>
                                        <div class="product__pride-newPride">
                                            <span class="Price">
                                                <bdi>
                                                    @string.Format("{0:N0}", item.Giakhuyenmai)
                                                    <span class="currencySymbol">₫</span>
                                                </bdi>
                                            </span>
                                        </div>
                                    </div>
                                </a>



                                <!--  } else
                                       {
                                           <span class="disabled"></span>
                                       }
                                       khi điều kiện sai sẽ trả về khoảng trống tương đương các sản phẩm sẽ ẩn-->


                            </div>

                        }

                    </div>
                </div>
            </div>
            <!---->
        </div>
    </div>
</div>



